<%- include('../partials/header'); -%>

<body class="p-3 mb-2 bg-dark text-black">

  <body class="p-3 mb-2 bg-dark text-white">

    <section>
    <form class="container" method="POST" action="/register">
      <h1 style="color: #efebf2;">Register</h1>

      <div class="row">
        <div class="form-group col-12 col-md-6" style="max-width: 20rem;">
          <label for="fullName" style="color: #efebf2;">Full Name</label>
         <input type="text" name="name" class="form-control" placeholder="Enter full name">

        </div>
		
		 <div class="row">
        <div class="form-group col-12 col-md-6" style="min-width: 20rem;">
          <label for="email" style="color: #efebf2;">Email</label>
     <input type="email" name="email" class="form-control" aria-describedby="emailHelp"
                placeholder="Enter email">

        </div>

        <div class="form-group col-12 col-md-6" style="min-width: 20rem;">
          <label for="password" style="color: #efebf2;">Password</label>
          <input type="password" name="password" class="form-control" placeholder="Password">
 
        </div>
      </div>
        <div class="form-controls col-12">
		</br>
          <button class="btn btn-success" type="submit">Register</button>
      </div>
    </form>
    </section>



